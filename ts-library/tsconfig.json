{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "paths": {
      "#root/*": ["./src/*"]
    },
    "strict": true,
    "target": "es5"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
